<div class="animate-fade-in">
  <div style="margin-bottom: 3rem;">
    <h2 style="
      font-family: var(--font-display);
      font-size: 32px;
      font-weight: 300;
      letter-spacing: 0.08em;
      color: var(--color-white);
      margin: 0 0 0.5rem 0;
    ">
      Configuration Changes
    </h2>
    <div style="
      height: 1px;
      background: linear-gradient(to right, var(--color-amber), transparent);
      margin-bottom: 2rem;
    "></div>
  </div>

  {{#if projects.length}}
    <div style="margin-bottom: 2rem;">
      <label style="
        display: block;
        font-family: var(--font-technical);
        font-size: 10px;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-silver);
        margin-bottom: 0.75rem;
      ">
        Project
      </label>
      <select
        id="project-select"
        hx-get="/diff"
        hx-target="#diff-content"
        hx-swap="innerHTML"
        hx-include="this"
        name="projectId"
        style="
          max-width: 400px;
          background: var(--color-slate);
          border: 1px solid rgba(255, 255, 255, 0.1);
          border-radius: 2px;
          padding: 0.875rem 1rem;
          font-family: var(--font-technical);
          font-size: 13px;
          color: var(--color-pearl);
          cursor: pointer;
          transition: all 0.3s ease;
        "
        onfocus="this.style.borderColor='var(--color-amber)'; this.style.boxShadow='0 0 0 3px var(--color-glow)'"
        onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.boxShadow='none'"
      >
        {{#each projects}}
          <option value="{{id}}" {{#if (eq id ../currentProjectId)}}selected{{/if}}>{{name}}</option>
        {{/each}}
      </select>
    </div>

    <div id="diff-content">
      {{#if changes.length}}
        <div style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 2rem;
          padding: 1.5rem;
          background: var(--color-carbon);
          border: 1px solid rgba(255, 255, 255, 0.08);
          border-radius: 2px;
        ">
          <div>
            <div style="
              font-family: var(--font-technical);
              font-size: 10px;
              letter-spacing: 0.15em;
              text-transform: uppercase;
              color: var(--color-silver);
              margin-bottom: 0.5rem;
            ">
              Total Changes
            </div>
            <div style="
              font-family: var(--font-display);
              font-size: 36px;
              font-weight: 300;
              letter-spacing: 0.05em;
              color: var(--color-amber);
            ">
              {{changes.length}}
            </div>
          </div>

          <a
            href="/diff/export?projectId={{currentProjectId}}"
            style="
              padding: 1rem 2rem;
              background: var(--color-iron);
              border: 1px solid rgba(255, 255, 255, 0.1);
              border-radius: 2px;
              font-family: var(--font-technical);
              font-size: 10px;
              letter-spacing: 0.15em;
              text-transform: uppercase;
              color: var(--color-amber);
              text-decoration: none;
              transition: all 0.2s ease;
              display: inline-block;
            "
            onmouseover="this.style.background='var(--color-slate)'; this.style.borderColor='var(--color-amber)'"
            onmouseout="this.style.background='var(--color-iron)'; this.style.borderColor='rgba(255, 255, 255, 0.1)'"
          >
            Export Changes →
          </a>
        </div>

        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {{#each changes}}
            <div style="
              background: var(--color-carbon);
              border-left: 3px solid {{#if (eq type 'added')}}#4ade80{{else}}{{#if (eq type 'removed')}}#f87171{{else}}var(--color-amber){{/if}}{{/if}};
              border-radius: 2px;
              padding: 1.5rem;
            ">
              <div style="
                display: flex;
                align-items: center;
                gap: 1rem;
                margin-bottom: 1rem;
              ">
                <span style="
                  display: inline-block;
                  padding: 0.375rem 0.75rem;
                  background: {{#if (eq type 'added')}}rgba(74, 222, 128, 0.1){{else}}{{#if (eq type 'removed')}}rgba(248, 113, 113, 0.1){{else}}var(--color-glow){{/if}}{{/if}};
                  border: 1px solid {{#if (eq type 'added')}}#4ade80{{else}}{{#if (eq type 'removed')}}#f87171{{else}}var(--color-amber){{/if}}{{/if}};
                  border-radius: 2px;
                  font-family: var(--font-technical);
                  font-size: 9px;
                  letter-spacing: 0.15em;
                  text-transform: uppercase;
                  color: {{#if (eq type 'added')}}#4ade80{{else}}{{#if (eq type 'removed')}}#f87171{{else}}var(--color-amber){{/if}}{{/if}};
                ">
                  {{type}}
                </span>
              </div>

              <div style="
                font-family: var(--font-technical);
                font-size: 13px;
                color: var(--color-pearl);
                line-height: 1.6;
                margin-bottom: 1rem;
              ">
                {{description}}
              </div>

              {{#if oldValue}}
                <div style="
                  background: var(--color-slate);
                  border: 1px solid rgba(248, 113, 113, 0.2);
                  border-radius: 2px;
                  padding: 0.75rem 1rem;
                  margin-bottom: 0.5rem;
                ">
                  <div style="
                    font-family: var(--font-technical);
                    font-size: 10px;
                    letter-spacing: 0.1em;
                    color: #f87171;
                    margin-bottom: 0.5rem;
                  ">
                    OLD VALUE
                  </div>
                  <pre style="
                    font-family: var(--font-technical);
                    font-size: 11px;
                    color: var(--color-silver);
                    margin: 0;
                    white-space: pre-wrap;
                    word-break: break-word;
                  ">{{json oldValue}}</pre>
                </div>
              {{/if}}

              {{#if newValue}}
                <div style="
                  background: var(--color-slate);
                  border: 1px solid rgba(74, 222, 128, 0.2);
                  border-radius: 2px;
                  padding: 0.75rem 1rem;
                ">
                  <div style="
                    font-family: var(--font-technical);
                    font-size: 10px;
                    letter-spacing: 0.1em;
                    color: #4ade80;
                    margin-bottom: 0.5rem;
                  ">
                    NEW VALUE
                  </div>
                  <pre style="
                    font-family: var(--font-technical);
                    font-size: 11px;
                    color: var(--color-silver);
                    margin: 0;
                    white-space: pre-wrap;
                    word-break: break-word;
                  ">{{json newValue}}</pre>
                </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      {{else}}
        <div style="
          text-align: center;
          padding: 4rem 2rem;
          background: var(--color-carbon);
          border: 1px solid rgba(255, 255, 255, 0.05);
          border-radius: 2px;
        ">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" style="
            color: var(--color-iron);
            margin-bottom: 2rem;
            opacity: 0.5;
          ">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <h3 style="
            font-family: var(--font-display);
            font-size: 24px;
            font-weight: 300;
            letter-spacing: 0.08em;
            color: var(--color-silver);
            margin: 0 0 0.5rem 0;
          ">
            No Changes Detected
          </h3>
          <p style="
            font-family: var(--font-technical);
            font-size: 11px;
            letter-spacing: 0.1em;
            color: var(--color-iron);
            margin: 0;
          ">
            THE CURRENT CONFIGURATION MATCHES THE ORIGINAL
          </p>
        </div>
      {{/if}}
    </div>
  {{else}}
    <div style="
      text-align: center;
      padding: 4rem 2rem;
      background: var(--color-carbon);
      border: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 2px;
    ">
      <p style="
        font-family: var(--font-technical);
        font-size: 11px;
        letter-spacing: 0.08em;
        color: var(--color-iron);
        margin: 0 0 1.5rem 0;
      ">
        No projects available
      </p>
      <a href="/" style="
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: var(--color-iron);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        font-family: var(--font-technical);
        font-size: 10px;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-amber);
        text-decoration: none;
        transition: all 0.2s ease;
      "
      onmouseover="this.style.background='var(--color-slate)'; this.style.borderColor='var(--color-amber)'"
      onmouseout="this.style.background='var(--color-iron)'; this.style.borderColor='rgba(255, 255, 255, 0.1)'">
        Import Configuration →
      </a>
    </div>
  {{/if}}
</div>
