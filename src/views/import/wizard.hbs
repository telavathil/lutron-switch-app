<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Import Lutron Configuration</h2>

    <form
      hx-post="/api/import"
      hx-target="#import-result"
      hx-swap="innerHTML"
      hx-indicator="#loading"
      enctype="multipart/form-data"
      class="space-y-6"
    >
      <div>
        <label for="projectName" class="block text-sm font-medium text-gray-700 mb-2">
          Project Name
        </label>
        <input
          type="text"
          id="projectName"
          name="projectName"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          placeholder="e.g., Elavathil Residence"
        />
      </div>

      <div>
        <label for="engravingReport" class="block text-sm font-medium text-gray-700 mb-2">
          Engraving Report (PDF)
        </label>
        <input
          type="file"
          id="engravingReport"
          name="engravingReport"
          accept=".pdf"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div>
        <label for="programmingReport" class="block text-sm font-medium text-gray-700 mb-2">
          Programming Report (PDF)
        </label>
        <input
          type="file"
          id="programmingReport"
          name="programmingReport"
          accept=".pdf"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div>
        <button
          type="submit"
          class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 font-medium"
        >
          Import Configuration
        </button>
      </div>

      <div id="loading" class="htmx-indicator text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
        <p class="mt-2 text-sm text-gray-600">Processing PDFs...</p>
      </div>
    </form>

    <div id="import-result" class="mt-6"></div>
  </div>
</div>
