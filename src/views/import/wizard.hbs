<div class="animate-fade-in" style="max-width: 800px; margin: 0 auto;">
  <div style="
    background: var(--color-carbon);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 2px;
    box-shadow: var(--shadow-ambient);
    padding: 4rem;
  ">
    <div style="text-align: center; margin-bottom: 3rem;">
      <h2 style="
        font-family: var(--font-display);
        font-size: 36px;
        font-weight: 300;
        letter-spacing: 0.08em;
        color: var(--color-white);
        margin: 0 0 0.5rem 0;
      ">
        Import Configuration
      </h2>
      <p style="
        font-family: var(--font-technical);
        font-size: 11px;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--color-silver);
        margin: 0;
      ">
        Upload Engraving & Programming Reports
      </p>
    </div>

    <form
      hx-post="/import"
      hx-target="#import-result"
      hx-swap="innerHTML"
      hx-indicator="#loading"
      enctype="multipart/form-data"
      style="display: flex; flex-direction: column; gap: 2rem;"
    >
      <div>
        <label style="
          display: block;
          font-family: var(--font-technical);
          font-size: 10px;
          letter-spacing: 0.15em;
          text-transform: uppercase;
          color: var(--color-silver);
          margin-bottom: 0.75rem;
        ">
          Project Name
        </label>
        <input
          type="text"
          id="projectName"
          name="projectName"
          required
          placeholder="e.g., Elavathil Residence"
          style="
            width: 100%;
            background: var(--color-slate);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            padding: 1rem 1.25rem;
            font-family: var(--font-technical);
            font-size: 13px;
            color: var(--color-pearl);
            letter-spacing: 0.02em;
            transition: all 0.3s ease;
          "
          onfocus="this.style.borderColor='var(--color-amber)'; this.style.boxShadow='0 0 0 3px var(--color-glow)'"
          onblur="this.style.borderColor='rgba(255, 255, 255, 0.1)'; this.style.boxShadow='none'"
        />
      </div>

      <div>
        <label style="
          display: block;
          font-family: var(--font-technical);
          font-size: 10px;
          letter-spacing: 0.15em;
          text-transform: uppercase;
          color: var(--color-silver);
          margin-bottom: 0.75rem;
        ">
          Engraving Report
        </label>
        <input
          type="file"
          id="engravingReport"
          name="engravingReport"
          accept=".pdf"
          required
          style="
            width: 100%;
            background: var(--color-slate);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            padding: 1rem 1.25rem;
            font-family: var(--font-technical);
            font-size: 13px;
            color: var(--color-pearl);
            cursor: pointer;
          "
        />
      </div>

      <div>
        <label style="
          display: block;
          font-family: var(--font-technical);
          font-size: 10px;
          letter-spacing: 0.15em;
          text-transform: uppercase;
          color: var(--color-silver);
          margin-bottom: 0.75rem;
        ">
          Programming Report
        </label>
        <input
          type="file"
          id="programmingReport"
          name="programmingReport"
          accept=".pdf"
          required
          style="
            width: 100%;
            background: var(--color-slate);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            padding: 1rem 1.25rem;
            font-family: var(--font-technical);
            font-size: 13px;
            color: var(--color-pearl);
            cursor: pointer;
          "
        />
      </div>

      <button
        type="submit"
        style="
          width: 100%;
          background: linear-gradient(135deg, var(--color-amber) 0%, #e6a43d 100%);
          border: none;
          border-radius: 2px;
          padding: 1.25rem;
          font-family: var(--font-technical);
          font-size: 11px;
          font-weight: 500;
          letter-spacing: 0.2em;
          text-transform: uppercase;
          color: var(--color-void);
          cursor: pointer;
          box-shadow: var(--shadow-button);
          transition: all 0.2s ease;
          margin-top: 1rem;
        "
        onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(255, 184, 77, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2)'"
        onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-button)'"
        onmousedown="this.style.animation='buttonPress 0.2s ease'"
      >
        Import Configuration
      </button>

      <div id="loading" class="htmx-indicator">
        <div class="spinner"></div>
      </div>
    </form>

    <div id="import-result" style="margin-top: 2rem;"></div>
  </div>
</div>
