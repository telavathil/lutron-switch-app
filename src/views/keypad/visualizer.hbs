<div class="bg-white shadow rounded-lg p-6">
  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-900">
      {{keypad.location.area}} - {{keypad.location.room}}
    </h2>
    <p class="text-sm text-gray-600 mt-1">
      {{keypad.model}} • Gang {{keypad.wallplate.gangPosition}} • {{keypad.wallplate.color}}
    </p>
  </div>

  <div class="flex justify-center">
    <div class="w-64 bg-gray-900 rounded-lg p-4 shadow-lg">
      {{#if keypad.faceplate.label}}
        <div class="text-center mb-3 text-white text-xs font-medium">
          {{keypad.faceplate.label}}
        </div>
      {{/if}}

      <div class="space-y-2">
        {{#each keypad.buttons}}
          <button
            hx-get="/api/button/{{id}}/edit"
            hx-target="#editor-panel"
            hx-swap="innerHTML"
            class="w-full px-3 py-2 rounded text-sm font-medium transition-colors bg-gray-800 text-white hover:bg-gray-700"
          >
            {{#if engraving.label}}
              {{engraving.label}}
            {{else}}
              Button {{position}}
            {{/if}}
          </button>
        {{/each}}
      </div>

      {{#if keypad.raiseLowerButtons}}
        <div class="mt-4 flex gap-2">
          <button class="flex-1 px-2 py-1 rounded text-xs bg-gray-800 text-white">
            {{keypad.raiseLowerButtons.raise.label}}
          </button>
          <button class="flex-1 px-2 py-1 rounded text-xs bg-gray-800 text-white">
            {{keypad.raiseLowerButtons.lower.label}}
          </button>
        </div>
      {{/if}}
    </div>
  </div>

  <div class="mt-6">
    <h3 class="text-sm font-medium text-gray-900 mb-2">Button Details</h3>
    <div id="editor-panel" class="border border-gray-200 rounded-lg p-4 bg-gray-50">
      <p class="text-sm text-gray-500">Select a button to view and edit its configuration</p>
    </div>
  </div>
</div>
